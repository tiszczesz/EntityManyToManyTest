@model EntityManyToManyTest.ModelViews.ModelViewClassNameTopic

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClassName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassName.Name" class="control-label"></label>
                <input asp-for="ClassName.Name" class="form-control" />
                <span asp-validation-for="ClassName.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassName.Description" class="control-label"></label>
                <input asp-for="ClassName.Description" class="form-control" />
                <span asp-validation-for="ClassName.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var item in Model.Topics) {
                    <input type="checkbox" value="@item.Id"> @item.Name
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
